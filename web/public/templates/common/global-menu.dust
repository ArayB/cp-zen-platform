<div ng-controller="login" class="cdgm-container">
    <div class="container cdgm-menu">
        <span class="cdgm-button"><a href="http://www.coderdojo.com">CoderDojo.com</a></span>
        <span class="cdgm-button" ng-controller="header"><a ng-click="selectTab('dojo-list')" ui-sref="dojo-list">Find a Dojo</a></span>
        <span class="cdgm-button"><a target="_blank" href="http://kata.coderdojo.com/wiki/Main_Page">Resources</a></span>
        <span class="cdgm-button"><a href="http://help.coderdojo.com/">FAQ</a></span>
        <span class="cdgm-button"><a href="http://coolestprojects.org/">CoolestProjects2015</a></span>
        <span ng-if="user" class="cdgm-right">
                <span>{{ user.name }} | </span>
                <span ng-click="logout()" class="cdgm-button" style="vertical-align: initial;"><a href="">Logout</a></span>
        </span>
    </div>
</div>
