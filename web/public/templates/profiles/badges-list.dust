<div class="panel panel-default badge-panel">
  <div class="panel-heading">{@i18n key="Badges"/}</div>
  <div class="panel-body">
    <div class="col-md-12">
      <div class="col-md-4" ng-if="badge.status === 'accepted'" ng-repeat="badge in badges">
        <div class="thumbnail">
          <img ng-src="{{ badge.imageUrl }}" alt="" class="img-responsive">
        </div>
        <div class="caption">
          <h3>{{ badge.name }}</h3>
        </div>
      </div>
    </div>
  </div>
</div>